# App
PORT=3000
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id

# Firebase Service Account Credentials (JSON string)
# Paste the entire service account JSON as a single-line string
# Use the conversion script to generate this: npm run firebase:convert <path-to-json-file>
# Example format (replace with your actual credentials):
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"my-project","private_key_id":"abc123","private_key":"-----BEGIN PRIVATE KEY-----\nABC...XYZ\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-123@my-project.iam.gserviceaccount.com","client_id":"123456"}
FIREBASE_SERVICE_ACCOUNT=

# JWT
JWT_SECRET=change-me-jwt-secret
JWT_EXPIRY=86400s

# Cache
CACHE_TTL_SECONDS=300

# Throttling (optional global)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

